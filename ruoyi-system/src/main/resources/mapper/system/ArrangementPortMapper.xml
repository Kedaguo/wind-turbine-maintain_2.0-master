<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.ArrangementPortMapper">
    
    <resultMap type="ArrangementPort" id="ArrangementPortResult">
        <result property="apId"    column="ap_id"    />
        <result property="aId"    column="a_id"    />
        <result property="pId"    column="p_id"    />
        <result property="taskId"    column="task_id"    />
        <result property="userId"    column="user_id"    />
    </resultMap>

    <sql id="selectArrangementPortVo">
        select ap_id, a_id, p_id, task_id, user_id from tl_arrangement_port
    </sql>

    <select id="selectArrangementPortList" parameterType="ArrangementPort" resultMap="ArrangementPortResult">
        <include refid="selectArrangementPortVo"/>
        <where>  
            <if test="aId != null "> and a_id = #{aId}</if>
            <if test="pId != null "> and p_id = #{pId}</if>
            <if test="taskId != null "> and task_id = #{taskId}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
        </where>
    </select>
    
    <select id="selectArrangementPortByApId" parameterType="Long" resultMap="ArrangementPortResult">
        <include refid="selectArrangementPortVo"/>
        where ap_id = #{apId}
    </select>
        
    <insert id="insertArrangementPort" parameterType="ArrangementPort">
        insert into tl_arrangement_port
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="apId != null">ap_id,</if>
            <if test="aId != null">a_id,</if>
            <if test="pId != null">p_id,</if>
            <if test="taskId != null">task_id,</if>
            <if test="userId != null">user_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="apId != null">#{apId},</if>
            <if test="aId != null">#{aId},</if>
            <if test="pId != null">#{pId},</if>
            <if test="taskId != null">#{taskId},</if>
            <if test="userId != null">#{userId},</if>
         </trim>
    </insert>

    <update id="updateArrangementPort" parameterType="ArrangementPort">
        update tl_arrangement_port
        <trim prefix="SET" suffixOverrides=",">
            <if test="aId != null">a_id = #{aId},</if>
            <if test="pId != null">p_id = #{pId},</if>
            <if test="taskId != null">task_id = #{taskId},</if>
            <if test="userId != null">user_id = #{userId},</if>
        </trim>
        where ap_id = #{apId}
    </update>

    <delete id="deleteArrangementPortByApId" parameterType="Long">
        delete from tl_arrangement_port where ap_id = #{apId}
    </delete>

    <delete id="deleteArrangementPortByApIds" parameterType="String">
        delete from tl_arrangement_port where ap_id in 
        <foreach item="apId" collection="array" open="(" separator="," close=")">
            #{apId}
        </foreach>
    </delete>
</mapper>